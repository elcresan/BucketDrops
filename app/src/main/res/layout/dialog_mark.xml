<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_mark_completed_padding"
    android:background="@color/bg_dialog">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="@dimen/btn_close_size"
        android:layout_height="@dimen/btn_close_size"
        android:layout_above="@+id/btn_completed"
        android:src="@drawable/ic_close"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/btn_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_mark_completed_vertical_padding"
        android:layout_marginBottom="@dimen/btn_mark_completed_vertical_padding"
        android:drawableTop="@drawable/ic_check"
        android:drawablePadding="@dimen/btn_mark_completed_drawable_padding"
        android:background="@null"
        android:text="@string/btn_mark_completed"
        android:textSize="@dimen/btn_mark_complete_text_size"
        android:textAllCaps="false"
        android:layout_centerInParent="true"/>

</RelativeLayout>